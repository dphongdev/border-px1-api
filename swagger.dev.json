{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "BORDER PX1 API",
    "description": "BORDER PX1 API demo server",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:9999",
  "basePath": "",
  "tags": [
    {
      "name": "BORDER PX1 API",
      "description": "API for BORDER PX1 API"
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "components": {
    "securitySchemes": {
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "JSESSIONID"
      }
    }
  },
  "paths": {
    "/user/login": {
      "post": {
        "tags": ["BORDER PX1 API"],
        "description": "Login white label management site",
        "produces": ["application/json"],
        "requestBody": {
          "description": "the password use to login border-px1-api",
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "password": {
                    "type": "string"
                  }
                },
                "required": ["password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login response",
            "schema": {
              "$ref": "#/definitions/loginResponse"
            }
          }
        }
      }
    },
    "/authentication/": {
      "post": {
        "tags": ["BORDER PX1 API"],
        "description": "Login BORDER PX1 site by its account",
        "produces": ["application/json"],
        "requestBody": {
          "description": "A encrypted string from username & password & url of BORDER PX1(encrypted RSA algorithm)",
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "authenticationData": {
                    "type": "string"
                  }
                },
                "required": ["authenticationData"]
              }
            }
          }
        },
        "security": [] ,
        "responses": {
          "200": {
            "description": "Authentiaction successfully",
            "headers": {
              "Set-Cookie": {
                "schema": {
                  "type": "string",
                  "example": "border-px1=abcde12345; Path=/; HttpOnly"
                },
                "description": "a cookie string of border-px1"
              }
            },
            "schema": {
              "$ref": "#/definitions/authenticationResponse"
            }
          }
        }
      }
    },
    "/authentication/status": {
      "parameters": [
        {
          "name": "border-px1",
          "in": "cookie",
          "required": true,
          "description": "The authenticated cookie",
          "type": "string"
        }
      ],
      "get": {
        "tags": ["BORDER PX1 API"],
        "description": "Check whether has cookie been expired yet",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Status of cookie",
            "schema": {
              "$ref": "#/definitions/authenticationStatusResponse"
            }
          }
        }
      }
    },
    "/info/backendId/{serverId}": {
      "parameters": [
        {
          "name": "serverId",
          "in": "path",
          "required": true,
          "description": "ID of server",
          "type": "string"
        },
        {
          "name": "border-px1",
          "in": "cookie",
          "required": true,
          "description": "aunthenticated cookie",
          "type": "string"
        }
      ],
      "post": {
        "tags": ["BORDER PX1 API"],
        "summary": "Create a backendId for browsing page to specific server",
        "responses": {
          "200": {
            "description": "Get backendId successfully",
            "schema": {
              "$ref": "#/definitions/backendIdResponse"
            }
          }
        }
      }
    },
    "/info/domains/{siteName}": {
      "parameters": [
        {
          "name": "siteName",
          "in": "path",
          "required": true,
          "description": "Name of site\n Ex:\n- Agent : ag.winning228.bpx\n- Mobile: mo.winning228.bpx\n- Member: winning228.bpx",
          "type": "string"
        },
        {
          "name": "cookie",
          "in": "cookie",
          "required": true,
          "description": "aunthenticated cookie",
          "type": "string"
        }
      ],
      "get": {
        "tags": ["BORDER PX1 API"],
        "summary": "Get all domains name of site name",
        "responses": {
          "200": {
            "description": "Get domain successfully",
            "schema": {
              "$ref": "#/definitions/domainResponse"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "backendIdResponse": {
      "required": ["success"],
      "properties": {
        "success": {
          "type": "boolean"
        },
        "backendId": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    },
    "authenticationResponse": {
      "required": ["success"],
      "properties": {
        "success": {
          "type": "boolean"
        },
        "message": {
          "type": "string"
        }
      }
    },
    "authenticationStatusResponse": {
      "required": ["status"],
      "properties": {
        "success": {
          "type": "boolean"
        }
      }
    },
    "authenticatedCookieResponse": {
      "required": ["border-px1"],
      "properties": {
        "border-px1": {
          "type": "string"
        }
      }
    },

    "loginResponse": {
      "required": ["success"],
      "properties": {
        "success": {
          "type": "boolean"
        },
        "token": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    },
    "siteResponse": {
      "required": ["ID", "Host", "ServerPoolID"],
      "properties": {
        "ID": {
          "type": "number",
          "uniqueItems": true
        },
        "Host": {
          "type": "string"
        },
        "ServerPoolID": {
          "type": "number"
        }
      }
    }
  }
}
